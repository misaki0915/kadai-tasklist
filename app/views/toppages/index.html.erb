<% if logged_in? %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @task, local: true) do |f| %>
        <div class="form-group">
          <label class="ml-1 col-form-label">ステータス</label>
          <div class="ml-1">
            <%= f.text_area :status, class: 'form-control', rows: 1 %>
          </div>
        </div>
        <div class="form-group">
          <label class="ml-1 col-form-label">内容</label>
          <div class="ml-1">
            <%= f.text_area :content, class: 'form-control', rows: 5 %>
          </div>
        </div>
        <%= f.submit '投稿!', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the tasks</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>